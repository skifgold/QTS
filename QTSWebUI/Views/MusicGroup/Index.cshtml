@model IEnumerable<QTSDataManager.DB.MusicGroup>

@{
    ViewBag.Title = "Music Group's List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class= "btn btn-success btn-xs" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PosterURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Annotation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinedGenres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="nailthumb-container square-thumb">
                <img src="@Html.DisplayFor(modelItem => item.PosterURL)" alt=""/>
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Annotation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinedGenres)
        </td>
        <td>
            @Html.ActionLink("Add genre", "AddGenre", new { musicGroupId = item.Id }, new { @class = "btn btn-success btn-xs" })
            @Html.ActionLink("Edit  ", "Edit", new {id = item.Id}, new {@class = "btn btn-warning btn-xs"})
        </td>
    </tr>
}

</table>

@section scripts
{
    <script>
        $(function () {
            $('div.nailthumb-container > img').hide();
            $('.nailthumb-container').nailthumb();
        });
    </script>
}
