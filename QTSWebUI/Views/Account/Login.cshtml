@model QTSWebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Login</title>
</head>
<body>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-theme.css")"/>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/login.css")"/>

<div class="container">
    <div class="login-container">
        <div class="avatar"></div>
        <div class="form-box">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(x => x.Email, new {placeholder = "e-mail", autofocus = ""})
                @Html.PasswordFor(x => x.Password, new {placeholder = "password"})
                <button class="btn btn-primary btn-block login" type="submit">Login</button>
                @Html.ValidationSummary(false, null, new {@class = "alert alert-danger animated fade-in-up"})
            }
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

</body>
</html>