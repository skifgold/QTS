@model IEnumerable<QTSDataManager.DB.MusicGroup>

@{
    ViewBag.Title = "AddGroup";
}

<h2>AddGroup</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PosterURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinedGenres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Annotation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div class="nailthumb-container square-thumb">
                <img src="@Html.DisplayFor(modelItem => item.PosterURL)" />
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinedGenres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Annotation)
        </td>
        <td>
            @Html.ActionLink("Add", "AddGroupToConcert", new {groupId = item.Id, concertId = ViewBag.ConcertId}, new {@class = "btn btn-success btn-xs"})
        </td>
    </tr>
}

</table>

@Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-default" })

@section scripts
{
    <script>
        $(function () {
            $('div.nailthumb-container > img').hide();
            $('.nailthumb-container').nailthumb();
        });
    </script>
}